{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2019",
    "module": "CommonJS",
    "lib": ["ESNext"],
    "allowJs": true,
    "checkJs": true,
    "jsx": "preserve",
    "declaration": false,
    "declarationMap": false,
    "sourceMap": false,
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "types": ["node"],
    "esModuleInterop": true,
    "importHelpers": false,
    "noEmitHelpers": false,
    "resolveJsonModule": true
  }
}
