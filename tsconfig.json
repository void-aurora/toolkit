{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "lib": ["ESNext", "ScriptHost"],
    "typeRoots": ["node_modules/@types"],
    "types": ["node", "jest"],
    "strict": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "allowJs": false,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "baseUrl": "."
  },
  "include": [
    // workspaces
    "packages/*/bin/**/*",
    "packages/*/build/**/*",
    "packages/*/scripts/**/*",
    "packages/*/__tests__/**/*",
    "packages/*/lib/**/*",
    "packages/*/src/**/*",
    "packages/*/*",
    // root
    "bin/**/*",
    "build/**/*",
    "scripts/**/*",
    "__tests__/**/*",
    "lib/**/*",
    "src/**/*",
    "*"
  ],
  "exclude": [
    "node_modules",
    "coverage",
    "dist",
    "packages/*/node_modules",
    "packages/*/coverage",
    "packages/*/dist"
  ]
}
