{
  // Root TypeScript Config https://www.typescriptlang.org/v2/en/tsconfig
  "compilerOptions": {
    "target": "ESNext", // Node 8 ES2017, Node 10 ES2018, Node 12 ES2019
    "module": "ESNext",
    "lib": ["ESNext"],
    "allowJs": false,
    "checkJs": false,
    "jsx": "preserve",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "types": ["node", "jest"],
    "esModuleInterop": true,
    "importHelpers": false,
    "noEmitHelpers": false,
    "resolveJsonModule": true
  },
  "include": [
    // workspaces
    "packages/*/bin/**/*",
    "packages/*/build/**/*",
    "packages/*/scripts/**/*",
    "packages/*/__tests__/**/*",
    "packages/*/lib/**/*",
    "packages/*/src/**/*",
    "packages/*/*",
    // root
    "bin/**/*",
    "build/**/*",
    "scripts/**/*",
    "__tests__/**/*",
    "lib/**/*",
    "src/**/*",
    "*"
  ],
  "exclude": [
    "node_modules",
    "coverage",
    "dist",
    "packages/*/node_modules",
    "packages/*/coverage",
    "packages/*/dist"
  ]
}
